    background-color: qlineargradient(spread:pad, x1:1, y1:0.545, x2:1, y2:0, stop:0 #7f7d79, stop:1 #8a8985);
    border: 1px solid #51504d;
}

QToolBar QPushButton:disabled,
QToolBar QPushButton:disabled:checked {
