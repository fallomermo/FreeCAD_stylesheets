}

QCheckBox::indicator:indeterminate {
    background-color: #e0a108;
    border: 1px solid #9d7106;
    image: url(qss:images/checkbox_indeterminate_light.png);
}

QCheckBox:focus,
QRadioButton:focus {
    border: none;
}

QFrame {
    border: 1px solid #71706d;
    border-radius: 3px;
    padding: 0px;
